<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quotebook_user_activity_bg"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/AppNameSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quotebook..."
        android:textSize="50sp"
        android:fontFamily="cursive"
        android:textColor="#FCFFE7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/app_intro_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/AppNameSplash"
        app:layout_constraintRight_toRightOf="@+id/AppNameSplash"
        app:layout_constraintTop_toBottomOf="@+id/AppNameSplash"
        app:layout_constraintVertical_bias="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>