<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/mode_selection_dialog_bg"
    android:backgroundTint="#AEFFFD">

    <TextView
        android:id="@id/heading"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="OPTIONS"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1C114F"
        />

    <Button
        android:id="@+id/homeBtn"
        android:padding="10dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:text="Home"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:foregroundTint="#5570F8"
        app:backgroundTint="#041C92"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/createPostBtn"
        android:padding="10dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/homeBtn"
        android:text="Create post"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:foregroundTint="#5570F8"
        app:backgroundTint="#041C92"
        android:textColor="#FFFFFF"
        />



    <Button
        android:id="@+id/myPostsBtn"
        android:padding="10dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/createPostBtn"
        android:text="My Posts"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:foregroundTint="#5570F8"
        app:backgroundTint="#041C92"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/quotifyMode"
        android:padding="10dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myPostsBtn"
        android:text="Quotify"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:foregroundTint="#5570F8"
        app:backgroundTint="#041C92"
        android:textColor="#FFFFFF"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
